function CheckZahl (Wert,Target) {
	if (isNaN(Wert))
	{
		var pos = Wert.length-1;
		Target.value=Target.value.substring(0,pos);
	}
}
/* ##################################################################*/
/* ##################################################################*/
/* ##################################################################*/
function CheckGanzZahl (Wert,Target,e) {
	Target.value = Target.value.replace(/[^0-9]/g, "");
}
