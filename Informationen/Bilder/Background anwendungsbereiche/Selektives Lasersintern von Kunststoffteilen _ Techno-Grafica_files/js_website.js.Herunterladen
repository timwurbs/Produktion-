function CheckZahlDatum (Wert,Target,e) {
	
	var keycode;
	if (window.event) keycode = window.event.keyCode;
	else if (e) keycode = e.which;
	else return true;
	if ( (keycode >= 48 && keycode <=57) ||  (keycode >= 96 && keycode <=105) || keycode == 190)
	{
	}
	else
	{
	var pos = Wert.length-1;
	Target.value=Target.value.substring(0,pos);
	}
}

